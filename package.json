{
  "name": "cli-bespoke",
  "description": "Validate commandlines in a simple, clean and customizable way.",
  "version": "0.1.0",
  "license": "MIT",
  "author": "FAL",
  "keywords": [
    "cli"
  ],
  "homepage": "https://github.com/fal-works/cli-bespoke-js#readme",
  "bugs": {
    "url": "https://github.com/fal-works/cli-bespoke-js/issues"
  },
  "type": "module",
  "files": [
    "lib",
    "src"
  ],
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "devDependencies": {
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "esbuild": "^0.8.43",
    "eslint": "7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-total-functions": "^4.7.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.4"
  },
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "npm run build:esm & npm run build:cjs",
    "build:esm": "tsc && npm run format:lib:esm",
    "preformat:lib:esm": "eslint --fix --no-ignore lib/**/*.{js,ts}",
    "format:lib:esm": "prettier --write lib/**/*.{js,ts}",
    "build:cjs": "esbuild src/index.ts --outfile=lib/index.cjs --format=cjs --platform=node --bundle --minify",
    "lint": "eslint src/",
    "test": "node test/test.js"
  }
}
